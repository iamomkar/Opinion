<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PollStatisticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/age_wise_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Age Statistics"
            android:background="@drawable/button_background_light"
            android:fontFamily="@font/josefin_bold"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/location_wise_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Location Statistics"
            android:background="@drawable/button_background_light"
            android:fontFamily="@font/josefin_bold"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/gender_wise_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Gender Statistics"
            android:background="@drawable/button_background_light"
            android:fontFamily="@font/josefin_bold"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/occupation_wise_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Occupation Statistics"
            android:background="@drawable/button_background_light"
            android:fontFamily="@font/josefin_bold"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>